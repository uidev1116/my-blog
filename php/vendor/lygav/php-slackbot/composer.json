{
  "name": "lygav/php-slackbot",
  "description": "Simple, easy to use, PHP package for sending messages to Slack. Send pretty, colourful messages with rich attachments quickly with this friendly API",
  "minimum-stability": "stable",
  "homepage": "https://github.com/lygav/php-slackbot",
  "keywords": [
    "slack",
    "slackbot",
    "php-slackbot"
  ],
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Vladimir (Vladi) Lyga",
      "homepage": "https://github.com/lygav",
      "email": "lyvladi@gmail.com"
    }
  ],

  "require": {
    "php": ">=5.3"
  },

  "require-dev": {
    "phpunit/phpunit": "3.7.*"
  },

  "autoload": {
    "psr-4": {
      "lygav\\slackbot\\": "src/"
    }
  },

  "autoload-dev": {
    "psr-4": { "lygav\\slackbot\\tests\\": "tests/" }
  }
}
